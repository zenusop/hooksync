<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <!-- Font Awesome for optional icons (e.g., weather icons) -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />
  <!-- Animate.css for optional animations -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
  <!-- Main stylesheet (same one as login) -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Background overlay (same class as in your login.ejs) -->
  <div class="background-container"></div>

  <!-- Dashboard container with a frosted-glass style -->
  <div class="dashboard-container animate__animated animate__fadeInDown">
    <h1>Time &amp; Weather Dashboard</h1>
    
    <!-- Current Time Section -->
    <div class="time-section">
      <h2>Current Time</h2>
      <p id="time-display">--:--:--</p>
    </div>

    <!-- Weather Section -->
    <div class="weather-section">
      <h2>Current Weather</h2>
      <div id="weather-info">
        <!-- Weather data will be injected here by JS -->
        <p id="weather-display">Loading weather...</p>
      </div>
    </div>
  </div>

  <!-- Script for Time and Weather -->
  <script>
    // 1. Display Current Time (Client-Side)
    function updateTime() {
      const now = new Date();
      const hours = String(now.getHours()).padStart(2, '0');
      const minutes = String(now.getMinutes()).padStart(2, '0');
      const seconds = String(now.getSeconds()).padStart(2, '0');
      document.getElementById('time-display').textContent = `${hours}:${minutes}:${seconds}`;
    }
    setInterval(updateTime, 1000);
    updateTime(); // call once immediately

    // 2. Fetch Weather Data
    // Example using OpenWeatherMap with a Node/Express proxy route
    // Make sure you have a route like GET /api/weather that returns JSON
    fetch('/api/weather')
      .then(response => response.json())
      .then(data => {
        const weatherEl = document.getElementById('weather-display');
        if (data.error) {
          weatherEl.textContent = data.error;
          return;
        }

        // Example: data.main.temp, data.weather[0].description, etc.
        const city = data.name;
        const temp = Math.round(data.main.temp);
        const desc = data.weather[0].description;
        weatherEl.textContent = `Location: ${city}, Temp: ${temp}Â°C, Condition: ${desc}`;
      })
      .catch(err => {
        document.getElementById('weather-display').textContent = 'Error fetching weather data.';
        console.error(err);
      });
  </script>
</body>
</html>
